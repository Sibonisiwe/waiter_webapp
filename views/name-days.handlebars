<body>

    
    <div class="row">
        <div class="col-12">
            <div class="table">
                <div class="heading">
                    <h1>Waiters Available</h1>
                </div>
                <hr>


                <a href="/clear"><button class="button-primary btn" type="" name="button">Clear list</button></a>
                <a href="/"><button class="button-primary btn" type="" name="button">Back</button></a>

                <br>
                <br>

                <div class="row">
                    <div class="col-6">
                        <div class="para">
                            
                           <div class="one">Waiters needed</div>
                           
                             <div class="two">Enough waiters</div>
                             
                             <div class="three">waiters are overloaded</div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">
                        {{#if messages.error}}
                        <span class="flashMsg">{{messages.error}}</span>
                        {{/if}}
                    </div>
                </div>

                <br>
                <table>

                    <thead>
                        <tr>
                            {{#each allDays}}
                            <th  > {{this.days}}</th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                               {{#each list}}
                            <td style="background-color:{{this.color}}">
                                {{#each this.waiters}}
                              <ul>  
                               <li> {{this}} </li>
                               
                           </ul>
                           {{/each}}
                            </td>
                            {{/each}}
                        </tr>

                        
                    </tbody>

                </table>
            </div>
        </div>
    </div>
    </div>
</body>